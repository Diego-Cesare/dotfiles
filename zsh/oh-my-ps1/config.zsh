# Select color scheme
colorscheme="nord"

# Define whether or not zsh should use syntax highlighting
syntax="true"

# Define only zsh should or should not use auto suggestion
suggestion="true"

# How the prompt should be displayed, whether in a single line or two lines.
# normal, jump
Prompt_Style="jump"

# Indicator style
# , ▶, ▷, λ, ↳, ⇀, −, ⊸, ◯, ♡, ♥, , , 
Indicator=""

# Whether username and hostname should be displayed.
User="false"
Host="false"

# Whether the command number that was given should be displayed.
Command_Number="false"

# Whether to display the current directory path.
Path="true"

# The style in which the directory path will be displayed.
# small, medium, large
Path_Style="small"

# Display the number of folders in the current directory.
Folders="false"
Files="false"

# Displays the size of the current directory.
# (May make the shell heavy)
Dir_Size="false"

# If an unrecognized command is given, the dot will turn red,
# otherwise it will remain blue.
Erro_Indicator="false"

# Within a git directory some information will be displayed.
Git_Status="false"

# Set whether the time should be displayed
Clock="false"

# Tell what format the time and date should be displayed in
# Example:
# H:M:S d/b/Y
# Use the date --help command in the terminal to see the options
Clock_Format="H:M"

# Some prompt elements will be displayed using POWERLINE decoration
Powerline="false"

# If user POWERLINE, the style that will be used.
# rounded, square, fragment, flame, none
Powerline_Style="rounded"

# Use the glowing effect on the characters.
Bold="true"
